<h2>OPAC検索</h2>

<form action="<%= url('/') %>" method="GET">
    <div class="form-group">
        <label for="keyword">キワード (書籍名、著者、出版社)</label>
        <input type="text" name="keyword" class="form-control" id="keyword"
                placeholder="例: ハリーポッター&nbsp; J.K.ローリング&nbsp; 静山社"
                value="<%= params[:keyword] %>">
    </div>

    <div class="buttons text-center">
        <a href="<%= url('/advanced-search') %>" class="btn btn-light mr-5">詳細検索へ</a>
        <input id="search-button" class="btn btn-primary" type="submit" value="検索">
    </div>
</form>

<%= erb :results %>
